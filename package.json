{
  "name": "black-engine-starter",
  "description": "Scaffold out a game supported by Black Engine.",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "start": "webpack-dev-server --mode development --hot",
    "build": "webpack --mode production --display-used-exports",
    "lint": "eslint 'src/**/*.js'"
  },
  "keywords": [
    "HTML5",
    "black-engine",
    "Blacksmith 2D",
    "Webpack"
  ],
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-react-jsx": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@svgr/webpack": "^3.1.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "babel-plugin-root-import": "^5.1.0",
    "case-sensitive-paths-webpack-plugin": "^2.1.2",
    "clean-webpack-plugin": "^0.1.19",
    "eslint": "^5.8.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-import-resolver-babel-plugin-root-import": "^1.1.1",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "extract-loader": "^3.0.0",
    "fast-glob": "^2.2.3",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.1.2",
    "lint-staged": "^8.0.4",
    "prettier": "^1.14.3",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "val-loader": "^1.1.1",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2",
    "webpack-config-parts": "^4.0.0",
    "webpack-dev-server": "^3.1.10",
    "webpack-merge": "^4.1.4"
  },
  "dependencies": {
    "@2players/black-box": "https://github.com/2players/black-box.git#dev",
    "black-engine": "https://github.com/2players/black-engine.git#dev"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "**/*.{json,md}": [
        "prettier --write",
        "git add"
      ],
      "**/*.js": [
        "eslint --fix",
        "git add"
      ]
    }
  }
}
